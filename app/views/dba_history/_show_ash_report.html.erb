<%= render_page_caption("Generate genuine Oracle ASH report") %>

<%=
  ajax_form({
              :controller=>:dba_history,
              :action=>:list_ash_global_report_html
            }, { 'data-type': :json }

  ) do
%>
  <div class="flex-row-container">
    <%= include_start_end_timepicker %>
    <%= instance_tag(required: true) %>
    <%= dbid_selection %>
    <div class="flex-row-element">
      <%= submit_tag('Generate ASH report',
                     title: "Generate ASH-report by executing DBMS_WORKLOAD_REPOSITORY.ASH_REPORT_HTML\nRequires the role DBA or OEM_MONITOR for the connected user.\n\nLoading the new page may last some seconds, don't worry.")
      %>
    </div>
  </div>
<% end %>

