<% @update_area = get_unique_area_id %>

<%= render_page_caption("CPU-Usage and DB-Time from Active Session History (table #{PanoramaConnection.adjust_table_name('DBA_Hist_Active_Sess_History')})") %>

<%= ajax_form(:controller=>:dba_waits, :action=>:list_cpu_usage_historic, :update_area=>@update_area) do %>
  <div class="flex-row-container">
    <%= include_start_end_timepicker %>
    <%= instance_tag(rac_only: true) %>
    <div class="flex-row-element" title="<%= t(:grouping_hint, :default=>'Group listing by attribute') %>">
      <%= t(:grouping, :default=>'Grouping') %>
      <select name="grouping">
        <option value='dd'          ><%= t(:day,    :default=>'Day')   %></option>
        <option value='hh24'        ><%= t(:hour,   :default=>'Hour')  %></option>
        <option value='mi' selected ><%= t(:minute, :default=>'Minute')%></option>
      </select>
    </div>


    <div class="flex-row-element">
      <%= submit_tag('Show', :title => 'Show usage info') %>
    </div>
  </div>
<% end %>
<div id="<%= @update_area %>" style="clear: both; width:100%; ">
</div>

