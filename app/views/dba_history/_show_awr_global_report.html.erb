<%= render_page_caption("Generate genuine Oracle AWR global report for RAC") %>


<%= ajax_form({
                :controller=>:dba_history,
                :action=>:list_awr_global_report_html
              }, { 'data-type': :json }
    ) do
%>
  <div class="flex-row-container">
    <%= include_start_end_timepicker %>
    <%= instance_tag %>
    <%= dbid_selection %>
    <div class="flex-row-element">
      <%= submit_tag('Generate AWR report',
                     title: "Generate AWR-report by executing DBMS_WORKLOAD_REPOSITORY.AWR_GLOBAL_REPORT_HTML\nRequires the role DBA or OEM_MONITOR for the connected user.\n\nLoading the new page may last some seconds, don't worry.")
      %>
    </div>
  </div>
<% end %>

